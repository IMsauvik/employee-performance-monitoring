# Server Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials

# Server Configuration
PORT=8787
NODE_ENV=development

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=Your App Name <your-email@gmail.com>

# Company Branding
COMPANY_NAME=Your Company Name
COMPANY_LOGO_URL=http://localhost:5173/logo.png

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Security (Generate strong random strings)
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
SESSION_SECRET=your-session-secret-here-minimum-32-characters
